<div class="row">
  <div class="col-md-9">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h4><%= @artist.name %> - List of songs</h4>
      </div>

      <div class="panel-body">
          <div class="row">
            <div class="col-md-7">
              <% if @artist.songs.any? %>
                <ul class="song-list">
                  <% @artist.songs.each do |song| %>
                    <li class="song-list-item"><%= song.title %></li>
                  <% end %>
                </ul>
              <% else %>
                <p>Whoops, there are no songs for this artist. Add some, if you like..</p>
              <% end %>
            </div>

            <div class="col-md-3 right">
              <%= link_to "Add new artist", new_artist_path, class: "btn btn-primary" %>
              <%= link_to "Edit List of songs", edit_artist_path(@artist), class: "btn btn-default" %>
            </div>
          </div>

      </div>
    </div>

    <%= link_to "Add new song", new_artist_song_path, class: "btn btn-primary" %>
    <%= link_to "Back to overview", artists_path, class: "btn btn-default" %>
  </div>
</div>
