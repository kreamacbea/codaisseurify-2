<%= form_for @artist, html: { multipart: true } do |f| %>

  <div class="form-group">
    <label>Artist name</label>
    <%= f.text_area :name, placeholder: "Name of the artist", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Photo</label>
    <span class="btn btn-default">
      Upload photo
      <%= file_field_tag "images[]", type: :file, multiple: true %>
    </span>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>

  <div class="actions">
    <%= link_to "Cancel", artist_path, class: "btn btn-default" %>
  </div>

<% end %>
